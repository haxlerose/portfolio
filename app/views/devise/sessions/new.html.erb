<div class="relative z-[5] w-full min-h-[60vh] flex items-center justify-center px-4 py-20 font-extralight">
  <div class="w-full max-w-md bg-gray-800 border border-gray-700 rounded-xl shadow-2xl p-8">
    <h1 class="text-3xl font-light text-teal-400 text-center mb-8">Sign in</h1>

    <%= form_with model: resource,
                  as: resource_name,
                  url: session_path(resource_name),
                  data: { turbo: false },
                  class: "space-y-6" do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm text-gray-300 mb-1" %>
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          class: "w-full rounded-md bg-gray-900 border border-gray-700 text-white placeholder-gray-400 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-teal-400" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm text-gray-300 mb-1" %>
        <%= f.password_field :password,
                             autocomplete: "current-password",
                             class: "w-full rounded-md bg-gray-900 border border-gray-700 text-white placeholder-gray-400 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-teal-400" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "rounded border-gray-700 bg-gray-900 text-teal-400 focus:ring-teal-400" %>
          <%= f.label :remember_me, class: "ml-2 text-sm text-gray-300" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", class: "w-full inline-flex justify-center items-center rounded-md bg-teal-400 hover:bg-teal-600 text-gray-900 font-medium px-4 py-3 transition-colors" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm">
      <%= link_to "Back to home", root_path, class: "text-teal-400 hover:text-teal-600" %>
    </div>
  </div>
</div>

